//Ejercicios de estructuras selectivas.Hoja1.Ejercicio 17
#include <conio.h>
#include <iostream>

using namespace std;

int main()
{
	//ENTRADA
	int x;
	int	y;

	//LOGICA
	cout << "Ingrese las coordenadas x e y del punto: ";
	cin >> x >> y;
	if (x > 0 && y > 0) {
		cout << "El punto se encuentra en el PRIMER CUADRANTE." << endl;
	}
	else {
		if (x < 0 && y >0) {
			cout << "El punto se encuentra en el SEGUNDO CUADRANTE." << endl;
		}
		else {
			if (x < 0 && y < 0) {
				cout << "El punto se encuentra en el TERCER CUADRANTE." << endl;
			}
			else {
				cout << "El punto se encuentra en el CUARTO CUADRANTE." << endl;
			}
		}
	}

	//SALIDA
	_getch();
}
