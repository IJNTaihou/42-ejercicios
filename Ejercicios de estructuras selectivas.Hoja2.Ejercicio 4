//Ejercicios de estructuras selectivas.Hoja2.Ejercicio 4
#include <conio.h>
#include <iostream>

using namespace std;

int main()
{
	//ENTRADA
	int num, V, val;

	//LOGICA
	cout << "Ingrese valor para num: ";
	cin >> num;

	if (num == 1) {
	cout << "Ingrese valor para V: ";
	cin >> V;
	val = 100 * V;
	}
	else {
	if (num == 2) {
	cout << "Ingrese valor para V: ";
    cin >> V;
    val = pow(100, V);
	}
	else {
	if (num == 3) {
	cout << "Ingrese valor para V: ";
	cin >> V;
    val = 100 / V;
	}
	else {
	val = 0;
	}
	}
	}

	//SALIDA
	cout << "Val = " << val << endl;

	_getch();
}
