//Ejercicios de estructuras selectivas.Hoja1.Ejercicio 5
#include <iostream>
#include <conio.h>
#include <stdio.h>

using namespace std;

int main()
{
	//ENTRADA

	int A;
	int B;
	int C;

	//LOGICA

	printf("Ingrese los lados del triangulo ABC:");
	cin >> A;
	cin >> B;
	cin >> C;


	if (A - B < C && B - A < C && C < A + B && A - C < B && C - A < B && B < A + C && B - C < A && C - B < A && A < B + C)
	{
		cout << "SI ES UN TRIANGULO";
	}
	else
	{
		cout << "NO ES UN TRIANGULO";
	}

	_getch();
} 
